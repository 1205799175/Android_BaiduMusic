<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--推荐 歌手-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_title_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommend_songer_detail_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/common_margin"
                android:drawableLeft="@mipmap/bt_return_nor"
                android:drawablePadding="@dimen/control_margin_pbone_boeder"
                android:text="@string/recommend_songer"
                android:textColor="@color/colorLocalMusic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_mix1_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_Img_Left"
                android:layout_marginRight="@dimen/recommend_Img_Left"
                android:src="@mipmap/bule_lines" />

            <TextView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recommend_songer_hot" />

            <LinearLayout
                android:id="@+id/recommend_songer_detail_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/fragment_recommend_margin"
                    android:src="@mipmap/ic_songlist_detail_nor" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_zero"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/recommend_songer_detail_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TabLayout
                android:id="@+id/recommend_songer_detail_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <include layout="@layout/item_view_line" />

        <com.yangyuning.baidumusic.view.MyListView
            android:id="@+id/recommend_songer_detail_lv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_zero"
            android:layout_weight="2" />
    </LinearLayout>

</ScrollView>