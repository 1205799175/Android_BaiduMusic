<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--乐库 排行 ListView行布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_dimen">
        <RelativeLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_ranking_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/new_songss" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/little_dimen"
                android:layout_marginRight="@dimen/little_dimen"
                android:layout_alignBottom="@+id/item_ranking_img"
                android:layout_alignRight="@+id/item_ranking_img"
                android:src="@mipmap/bt_play_nor" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_dimen">
            <TextView
                android:id="@+id/item_ranking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/small_size"
                android:text="新歌榜"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little_dimen"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_top_number_1"/>
                <TextView
                    android:id="@+id/item_ranking_song_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/little_dimen"
                    android:textSize="@dimen/small_size"
                    android:text="歌曲名-歌手"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little_dimen"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_top_number_2"/>
                <TextView
                    android:id="@+id/item_ranking_song_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/little_dimen"
                    android:textSize="@dimen/small_size"
                    android:text="歌曲名-歌手"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/little_dimen">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_top_number_3"/>
                <TextView
                    android:id="@+id/item_ranking_song_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/little_dimen"
                    android:textSize="@dimen/small_size"
                    android:text="歌曲名-歌手"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_songlist_detail_nor"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>