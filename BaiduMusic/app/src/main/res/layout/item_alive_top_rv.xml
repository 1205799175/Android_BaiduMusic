<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/alive_rv_margin_right_left"
    android:layout_marginRight="@dimen/alive_rv_margin_right_left"
    android:layout_marginTop="@dimen/alive_rv_margin_top"
    android:gravity="center"
    android:orientation="vertical">

    <!--直播-->
    <ImageView
        android:id="@+id/item_alive_top_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_recommend_lebo_blue" />

    <TextView
        android:id="@+id/item_alive_top_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alive_rv_margin_right_left"
        android:textColor="@color/text_color_black" />

</LinearLayout>