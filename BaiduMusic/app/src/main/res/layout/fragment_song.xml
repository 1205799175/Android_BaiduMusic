<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/control_margin_pbone_boeder"
    android:orientation="vertical">

    <!--乐库 歌单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_margin_phone_border"
            android:src="@mipmap/bule_lines" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_margin_phone_border"
            android:text="@string/music_mv_all_song"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/music_song_popwindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pop_margin_title"
            android:src="@mipmap/bt_mv_pull_down_normal" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/music_song_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_zero"
        android:layout_weight="1" />

</LinearLayout>