<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_bg_height"
            android:background="@color/main_title_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/control_margin_pbone_boeder"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/own_head_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_mymusic_try_normal" />

                <TextView
                    android:id="@+id/own_head_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/control_margin_pbone_boeder"
                    android:text="@string/own_listen"
                    android:textSize="@dimen/own_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.yangyuning.baidumusic.view.MyListView
                android:id="@+id/own_top_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
                android:text="@string/own_create_self"
                android:textColor="@color/text_color_black" />

            <com.yangyuning.baidumusic.view.MyListView
                android:id="@+id/own_bottom_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
                android:text="@string/own_songlist"
                android:textColor="@color/text_color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_tips_login" />

                <TextView
                    android:id="@+id/own_login_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
                    android:textSize="@dimen/own_text_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>