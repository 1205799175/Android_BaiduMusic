<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/play_music_ll">

    <!--播放栏 播放界面-->

    <!--最上部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/control_margin_pbone_boeder"
        android:layout_marginRight="@dimen/control_margin_pbone_boeder"
        android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/play_music_back_img"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_playpage_button_return_normal"/>
        <LinearLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/play_music_song_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/play_page_song_size"
                android:textColor="@color/colorLocalMusic"
                android:text="歌曲名"/>
            <TextView
                android:id="@+id/play_music_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌手"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/the_height_of_line"
                android:layout_height="30dp"
                android:background="@color/split_line_color" />
            <ImageView
                android:id="@+id/play_music_lyric_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_button_lyric_normal"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/play_page_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_zero"
        android:layout_weight="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/play_page_tb"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_gravity="center"
        app:tabIndicatorColor="@color/play_music_bg"
        app:tabMaxWidth="@dimen/common_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
        android:layout_marginRight="@dimen/control_margin_pbone_boeder"
        android:orientation="vertical">
        <SeekBar
            android:id="@+id/play_music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/colorLocalMusic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/play_music_current_time_tv"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/split_line_color"
                android:text="00:00"/>
            <TextView
                android:id="@+id/play_music_duration_tv"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/split_line_color"
                android:layout_height="wrap_content"
                android:text="00:00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_zero"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/play_music_form_img"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_loop_normal"/>
            <ImageView
                android:id="@+id/play_music_past_img"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_button_previous_normal"/>
            <ImageView
                android:id="@+id/play_music_play_img"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_play_music_seletor"/>
            <ImageView
                android:id="@+id/play_music_next_img"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_button_next_normal"/>
            <ImageView
                android:id="@+id/play_music_list_img"
                android:layout_width="@dimen/margin_zero"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_button_list_normal"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>