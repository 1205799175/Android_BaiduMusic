<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mv_rv_margin_right_left"
    android:layout_marginRight="@dimen/mv_rv_margin_right_left"
    android:layout_marginTop="@dimen/control_margin_pbone_boeder"
    android:orientation="vertical">

    <!--乐库 mv RecyclerView布局-->
    <ImageView
        android:id="@+id/item_mv_title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_recommend_lebo_blue" />

    <TextView
        android:id="@+id/item_mv_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/mv_rv_text_size" />

    <TextView
        android:id="@+id/item_mv_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recommend_listen_count" />
</LinearLayout>