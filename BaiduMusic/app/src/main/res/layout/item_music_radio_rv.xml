<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/control_margin_pbone_boeder">
    <!--乐库 电台 推荐电台 RecyclerView布局-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_music_radio_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/img_recommend_lebo_blue" />

        <TextView
            android:id="@+id/item_music_radio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_music_radio_img"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>