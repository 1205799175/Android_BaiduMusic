<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/control_margin_pbone_boeder"
    android:paddingBottom="@dimen/control_margin_pbone_boeder">
<!--歌单 详情 Rv 行布局-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_songlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/control_margin_pbone_boeder"
            android:textColor="@android:color/black"
            android:drawableRight="@mipmap/ic_mv"
            android:textSize="18sp"
            android:text="111" />

        <TextView
            android:id="@+id/item_songlist_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_sq"
            android:paddingLeft="@dimen/control_margin_pbone_boeder"
            android:text="111" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mike_normal"
        android:layout_marginRight="@dimen/common_margin"/>

    <ImageView
        android:id="@+id/item_songlist_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_list_more_normal" />
</LinearLayout>