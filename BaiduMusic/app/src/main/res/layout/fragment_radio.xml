<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--乐库 电台-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--频道-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_dimen"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/radio_lebo_red"
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/little_dimen"
                android:layout_weight="1"
                android:background="@mipmap/img_recommend_lebo_orange"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_radiopage_icon_like" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/radio_lebo_blue"
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_dimen"
                android:layout_weight="1"
                android:background="@mipmap/img_recommend_lebo_blue"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_radiopage_icon_personal" />
            </LinearLayout>

        </LinearLayout>

        <!--推荐电台-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/small_dimen"
            android:layout_marginRight="@dimen/small_dimen"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bule_lines" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/little_dimen"
                    android:text="@string/music_radio_recommend"
                    android:textColor="@color/text_color_black" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/music_radio_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_radio_tv"
                android:text="@string/music_radio_more_kinds" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>