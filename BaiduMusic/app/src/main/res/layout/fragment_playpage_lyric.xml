<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--播放界面 词-->

    <!--中间图片-->
    <ImageView
        android:id="@+id/play_page_lyric_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_zero"
        android:layout_weight="4"
        android:layout_marginTop="@dimen/control_margin_pbone_boeder"
        android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
        android:layout_marginRight="@dimen/control_margin_pbone_boeder"
        android:scaleType="fitXY"/>

    <!--下方部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_ktv_normal"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_button_download_activited"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_button_like_normal"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_moreactions_normal"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>