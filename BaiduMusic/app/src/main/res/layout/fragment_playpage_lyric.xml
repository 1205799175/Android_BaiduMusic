<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/play_music_bg">

    <!--播放界面 词-->

    <!--最上部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_zero"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/control_margin_pbone_boeder"
        android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/playpage_lyric_back_img"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_playpage_button_return_normal"/>
        <LinearLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/playpage_lyric_song_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/play_page_song_size"
                android:textColor="@color/colorLocalMusic"
                android:text="歌曲名"/>
            <TextView
                android:id="@+id/playpage_lyric_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌手"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="@dimen/the_height_of_line"
                android:layout_height="30dp"
                android:background="@color/split_line_color" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bt_playpage_button_lyric_normal"/>
        </LinearLayout>
    </LinearLayout>

    <!--中间图片-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_zero"
        android:layout_weight="4"
        android:layout_marginLeft="@dimen/control_margin_pbone_boeder"
        android:layout_marginRight="@dimen/control_margin_pbone_boeder"
        android:src="@mipmap/ic_classify_img08"
        android:scaleType="fitXY"/>

    <!--下方部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_ktv_normal"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_button_download_activited"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_button_like_normal"/>
            <ImageView
                android:layout_width="@dimen/margin_zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bt_playpage_moreactions_normal"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>