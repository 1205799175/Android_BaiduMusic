<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--K歌上部 KTV, 华语金曲, 欧美经典详情-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_title_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/k_detail_ktv_china_usa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            android:drawableLeft="@mipmap/bt_return_nor"
            android:drawablePadding="@dimen/control_margin_pbone_boeder"
            android:text="@string/k_hot_song"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorLocalMusic" />
    </LinearLayout>

    <ListView
        android:id="@+id/k_detail_ktv_china_usa_lv"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_height="match_parent"/>


</LinearLayout>