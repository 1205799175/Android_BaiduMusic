<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--min List-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/min_list_pop_header">
        <ImageView
            android:id="@+id/min_list_pop_mode_img"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_list_random_normal"/>
        <Button
            android:id="@+id/min_list_pop_isplaying_btn"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="@string/min_list_is_playing_list"
            android:background="@color/min_list_pop_header"/>
        <TextView
            android:id="@+id/min_list_pop_clear_all_tv"
            android:layout_width="@dimen/margin_zero"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/min_list_clear_all"/>
    </LinearLayout>

    <ListView
        android:id="@+id/min_list_pop_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>