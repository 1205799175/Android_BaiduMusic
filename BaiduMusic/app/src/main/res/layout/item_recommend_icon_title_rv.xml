<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="@dimen/control_margin_pbone_boeder"
    android:paddingLeft="@dimen/control_margin_pbone_boeder"
    android:paddingBottom="@dimen/control_margin_pbone_boeder">

    <!--推荐 标题-->
    <LinearLayout
        android:id="@+id/item_song_with_singer_bg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_song_with_icon_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_recommend_lebo_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_song_with_icon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="111"
            android:maxLines="2"
            android:textSize="@dimen/recommend_text_size" />
    </LinearLayout>

</LinearLayout>