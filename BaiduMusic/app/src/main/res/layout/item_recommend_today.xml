<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <!--推荐 今日推荐-->
    <RelativeLayout
        android:id="@+id/today_recommend_rl"
        android:layout_width="@dimen/margin_zero"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/control_margin_phone_border"
        android:paddingTop="@dimen/control_margin_phone_border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/today_recommend_cirimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/bt_sceneplay_play" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/margin_zero"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:divider="@drawable/divider_linearlayout_rect"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/control_margin_pbone_boeder"
        android:paddingRight="@dimen/control_margin_pbone_boeder">

        <LinearLayout
            android:layout_width="@dimen/margin_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/today_recommend_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_zero"
                android:layout_weight="2"
                android:padding="@dimen/recommend_today_text_padding" />

            <TextView
                android:id="@+id/today_recommend_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_zero"
                android:layout_weight="3"
                android:padding="@dimen/recommend_today_text_padding" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/recommend_today_setting_margin_top_bottom"
                android:paddingTop="@dimen/recommend_today_setting_margin_top_bottom"
                android:src="@mipmap/bt_recsong_more" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>