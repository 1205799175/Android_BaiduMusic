<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yangyuning.baidumusic">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--读取SD卡权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".controller.app.BaiduMusicApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--主界面-->
        <activity android:name=".controller.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--播放音乐界面-->
        <activity android:name=".controller.activity.PlayMusicPageActivity"/>
        <!--注册服务-->
        <service android:name=".controller.services.MusicService"/>
    </application>

</manifest>